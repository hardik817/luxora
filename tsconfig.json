{
  "compilerOptions": {
    "target": "es5", // Recommended for broader browser compatibility
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true, // Ensures consistent file naming
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Ensure this is set to "node" for Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Explicitly set baseUrl for path resolution
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Next.js type definitions
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts" // Include generated Next.js types
  ],
  "exclude": [
    "node_modules"
  ]
}